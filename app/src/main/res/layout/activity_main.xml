<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:text="@string/infoText"/>

    <FrameLayout
        android:id="@+id/drop_framelayout"
        android:layout_width="match_parent"
       android:layout_centerInParent="true"
        android:layout_height="400dp">

        <ImageButton
            android:id="@+id/buttonWater"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/grey"
            android:scaleType="centerInside"
            android:src="@drawable/waterdrop"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/countWater"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:textColor="@android:color/white"

            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            tools:text="2"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/charging_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reminderText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_charging_gray" />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/reminderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hydrate while charging reminder sent 0 times"/>

</RelativeLayout>
